generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  distributorId String
  name          String
  description   String?
  price         Float
  quantity      Int
  imageUrls     String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
